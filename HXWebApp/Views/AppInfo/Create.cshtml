@model DLL.Models.MainDB.T_APP_INFOModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>新建</title>
    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    @using (Html.BeginForm("Create", "AppInfo", FormMethod.Post, new { @class = "definewidth m20" }))
    {
        @Html.AntiForgeryToken()
        <h4>新建</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        <table class="table table-bordered table-hover definewidth m10">
            <tr>
                <td width="10%" class="tableleft">@Html.LabelFor(model => model.APP_DESC)</td>
                <td>
                    @Html.EditorFor(model => model.APP_DESC, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.APP_DESC, "", new { @class = "text-danger", style = "color:red" })
                </td>
            </tr>
            <tr>
                <td class="tableleft">@Html.LabelFor(model => model.APP_IN_URL)</td>
                <td>
                    @Html.EditorFor(model => model.APP_IN_URL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.APP_IN_URL, "", new { @class = "text-danger", style = "color:red" })
                </td>
            </tr>
            <tr>
                <td class="tableleft">@Html.LabelFor(model => model.APP_OUT_URL)</td>
                <td>
                    @Html.EditorFor(model => model.APP_OUT_URL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.APP_OUT_URL, "", new { @class = "text-danger", style = "color:red" })
                </td>
            </tr>
            <tr>
                <td class="tableleft"></td>
                <td>
                    <input type="submit" class="btn btn-primary" value="保存" /> &nbsp;&nbsp;@Html.ActionLink("取消", "List", "AppInfo", null, new { @class = "btn btn-info", onclick = "javascript:window.history.go(-1); return false;" })
                </td>
            </tr>
        </table>
    }

</body>
</html>
