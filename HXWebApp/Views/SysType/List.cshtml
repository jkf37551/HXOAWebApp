@model HXWebApp.Models.PageModel<DLL.Models.MainDB.SYS_CODE_TYPEModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>代码类型</title>
    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    @using (Html.BeginForm("Query", "SysType", FormMethod.Post, new { @class = "form-inline definewidth m20", role = "form" }))
    {
    <table border="0">
        <tr>
            <td>类型代码：</td>
            <td>@Html.EditorFor(m=>m.QueryModel.TYPE_CODE) &nbsp;&nbsp;</td>
            <td>类型名称：</td>
            <td>@Html.EditorFor(m=> m.QueryModel.TYPE_DESC, new { @class = "abc input-default" }) &nbsp;&nbsp;</td>
            <td><button type="submit" class="btn btn-primary">查询</button>&nbsp;&nbsp;</td>
            <td>@Html.ActionLink("新增", "Create",null, new { @class = "btn btn-success" })</td>
        </tr>
    </table>
    }

    <table class="table table-bordered table-hover definewidth m10">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QueryModel.TYPE_DESC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QueryModel.TYPE_CODE)
            </th>
            <th>操作</th>
        </tr>

        @if (Model != null && Model.QueryData != null)
        {
            foreach (var item in Model.QueryData)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TYPE_DESC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TYPE_CODE)
            </td>
            <td>
                @Html.ActionLink("编辑", "Edit", new { id = item.ID },new { @class = "btn btn-small btn-info" }) |
                @Html.ActionLink("删除", "Delete", new { id = item.ID },new { @class= "btn btn-small btn-danger", onclick = "javascript:return confirm('确定要删除吗？')" })
            </td>
        </tr>
            }
        }
    </table>
</body>
</html>
