@model DLL.Models.MainDB.T_FTP_INFOModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>编辑</title>
    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    @using (Html.BeginForm("Edit", "FTPInfo", FormMethod.Post, new { @class = "definewidth m20" }))
    {
        @Html.AntiForgeryToken()
        <h4>编辑</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <table class="table table-bordered table-hover definewidth m10">
            <tr>
                <td width="10%" class="tableleft">@Html.LabelFor(model => model.FTP_ADDRESS)</td>
                <td>
                    @Html.EditorFor(model => model.FTP_ADDRESS, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FTP_ADDRESS, "", new { @class = "text-danger", style = "color:red" })
                </td>
            </tr>
            <tr>
                <td class="tableleft">@Html.LabelFor(model => model.FTP_DESC)</td>
                <td>
                    @Html.EditorFor(model => model.FTP_DESC, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FTP_DESC, "", new { @class = "text-danger", style = "color:red" })
                </td>
            </tr>
            <tr>
                <td class="tableleft">@Html.LabelFor(model => model.FTP_LOGIN_USER)</td>
                <td>
                    @Html.EditorFor(model => model.FTP_LOGIN_USER, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FTP_LOGIN_USER, "", new { @class = "text-danger", style = "color:red" })
                </td>
            </tr>
            <tr>
                <td class="tableleft">@Html.LabelFor(model => model.FTP_LOGIN_PASSWORD)</td>
                <td>
                    @Html.EditorFor(model => model.FTP_LOGIN_PASSWORD, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FTP_LOGIN_PASSWORD, "", new { @class = "text-danger", style = "color:red" })
                </td>
            </tr>
            <tr>
                <td class="tableleft"></td>
                <td>
                    <input type="submit" class="btn btn-primary" value="保存" /> &nbsp;&nbsp;@Html.ActionLink("取消", "List", "FTPInfo", null, new { @class = "btn btn-info", onclick = "javascript:window.history.go(-1); return false;" })
                </td>
            </tr>
        </table>
    }
</body>
</html>
