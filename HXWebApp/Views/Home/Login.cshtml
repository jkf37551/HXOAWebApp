@model DLL.Models.MainDB.UserModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" charset="utf-8" />
    <title>鸿翔开发管理系统</title>
    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <style type="text/css">
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, .05);
            -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, .05);
            box-shadow: 0 1px 2px rgba(0, 0, 0, .05);
            text-align:center;
        }

            .form-signin .form-signin-heading,
            .form-signin .checkbox {
                margin-bottom: 10px;
            }

            .form-signin input[type="text"],
            .form-signin input[type="password"] {
                font-size: 16px;
                height: auto;
                margin-bottom: 15px;
                padding: 7px 9px;
            }
    </style>
    <script>
        //检查窗口为顶级窗口
        function checkTopWd()
        {
            if (window.top !== window.self)
                window.top.location = window.location;
        }
    </script>
</head>
<body onload="checkTopWd()">
    <div class="container">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-signin", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h2 class="form-signin-heading">登录系统</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "color:red" })
            @Html.TextBoxFor(m=>m.USER_USERID,new { @class = "input-block-level", placeholder = "账号" })
            @Html.ValidationMessageFor(m => m.USER_USERID, "", new { @class = "text-danger", style = "color:red" })
            @Html.PasswordFor(m=>m.USER_PASSWORD,new { @class = "input-block-level", placeholder = "密码" })
            @Html.ValidationMessageFor(m => m.USER_PASSWORD, "", new { @class = "text-danger", style = "color:red" })
            <p style="text-align:center"><button class="btn btn-large btn-primary" type="submit">登录</button></p>
        }
    </div>
</body>
</html>
